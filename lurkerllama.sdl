---
version: "2.0"
services:
  lurkerllama:
    image: pupcakes/lurkerllama:latest
    expose:
      - port: 80
        as: 80
        to:
          - global: true
    env:
      - DISCORD_API_TOKEN=
      - DISCORD_CLIENT_ID=
      - DISCORD_GUILD_ID=
      - QDRANT_KEY=
      - QDRANT_URL=http://qdrant:6333
      - AKASH_CHAT_API_KEY=
      - AKASH_CHAT_API_ENDPOINT=https://chatapi.akash.network/api/v1
      - AKASH_CHAT_API_MODEL=Meta-Llama-3-1-8B-Instruct-FP8
      - OPENAI_API_KEY=
    params:
      storage:
        data:
          mount: /data/archives
          readOnly: false
  qdrant:
    image: qdrant/qdrant
    expose:
      - port: 6333
        as: 6333
        to:
          - global: false
    params:
      storage:
        data:
          mount: /qdrant/storage
          readOnly: false
profiles:
  compute:
    lurkerllama:
      resources:
        cpu:
          units: 2
        memory:
          size: 1gb
        storage:
          - size: 10gb
          - name: data
            size: 10gb
            attributes:
              persistent: true
              class: beta3
    qdrant:
      resources:
        cpu:
          units: 2
        memory:
          size: 1gb
        storage:
          - size: 10gb
          - name: data
            size: 10gb
            attributes:
              persistent: true
              class: beta3
  placement:
    dcloud:
      pricing:
        lurkerllama:
          denom: ibc/170C677610AC31DF0904FFE09CD3B5C657492170E7E52372E48756B71E56F2F1
          amount: 10000
        qdrant:
          denom: ibc/170C677610AC31DF0904FFE09CD3B5C657492170E7E52372E48756B71E56F2F1
          amount: 10000
      attributes:
        console/trials: "true"
      signedBy:
        anyOf: []
        allOf:
          - akash1365yvmc4s7awdyj3n2sav7xfx76adc6dnmlx63
deployment:
  lurkerllama:
    dcloud:
      profile: lurkerllama
      count: 1
  qdrant:
    dcloud:
      profile: qdrant
      count: 1
